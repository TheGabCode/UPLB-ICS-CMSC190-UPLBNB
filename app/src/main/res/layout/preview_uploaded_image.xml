<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/establishmentAddPhoto"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/background_with_shadow"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/deletePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/establishmentAddPhoto"
        app:layout_constraintEnd_toEndOf="@+id/establishmentAddPhoto"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/establishmentAddPhoto"
        app:layout_constraintTop_toTopOf="@id/establishmentAddPhoto"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/delete_24px" />
</android.support.constraint.ConstraintLayout>