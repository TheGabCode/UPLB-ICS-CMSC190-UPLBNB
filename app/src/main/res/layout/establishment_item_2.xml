<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_with_shadow">
            <ImageView
                android:id="@+id/establishmentThumbnail"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/background_with_shadow"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/establishment_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Establishment Name"
                        android:textColor="#000"

                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/establishment_item_category"
                        android:layout_marginTop="7dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Establishment Type"/>
                    <RatingBar
                        android:layout_marginTop="7dp"
                        android:id="@+id/establishment_item_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:rating="5.0"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/establishment_item_price"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ef6c00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12000-13500PHP"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>